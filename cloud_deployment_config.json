{
  "deployment": {
    "platform": "aws_ec2",
    "instance_type": "t3.medium",
    "region": "us-east-1",
    "auto_scaling": true,
    "backup_strategy": "daily"
  },
  "monitoring": {
    "health_checks": true,
    "auto_restart": true,
    "performance_alerts": true,
    "uptime_target": "99.9%"
  },
  "security": {
    "vpc": true,
    "security_groups": [
      "trading-system-sg"
    ],
    "encryption": true,
    "backup_encryption": true
  },
  "cost_optimization": {
    "spot_instances": true,
    "reserved_instances": false,
    "auto_shutdown": false,
    "estimated_monthly_cost": "$50-100"
  }
}