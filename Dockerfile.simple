# Simplified Alpaca Paper Trading Docker Image - No Dependencies
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip and install essential tools
RUN pip install --upgrade pip setuptools wheel

# Install only the essential packages we need
RUN pip install --no-cache-dir \
    python-dotenv==1.0.0 \
    alpaca-trade-api==3.1.1 \
    requests==2.31.0

# Copy application files (no requirements.txt to avoid conflicts)
COPY alpaca_paper_trading.py .
COPY continuous_trading_system.py .
# .env file will be mounted as volume, not copied

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/reports

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV TRADING_MODE=ALPACA_PAPER

# Expose port for monitoring
EXPOSE 8000

# Health check
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "print('Alpaca System Running')" || exit 1

# Default command
CMD ["python", "alpaca_paper_trading.py"]